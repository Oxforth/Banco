<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvdeuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPago"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tvPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edtMonto"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edtMonto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPagar"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="MONTO"
        android:inputType="number"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="272dp"
        android:text="PAGAR"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/lvDeudas"
        android:layout_width="match_parent"
        android:layout_height="662dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="366dp"></ListView>
</RelativeLayout>